{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    /* Strict Type-Checking Options */
    "strict": true,
    /* Others */
    "lib": ["dom", "es2017"],
    "types": [],
    "outDir": "out/", // target for compiled files
    "target": "es5",
    "jsx": "react", // process JSX
    "module": "Preserve",
    "moduleResolution": "bundler",
    "declaration": true, // emit declarations
    "importHelpers": false, // importing helper functions from tslib
    "noEmitHelpers": false, // disable emitting inline helper functions
    "noEmitOnError": true,
    "verbatimModuleSyntax": true,
    // "noUnusedLocals": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": true,
    "stripInternal": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
